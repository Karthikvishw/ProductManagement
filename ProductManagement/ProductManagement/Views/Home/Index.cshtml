@{
    ViewData["Title"] = "Product Management";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/ProductDashboard.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
<div class="row">
    <div class="col-lg-12">
        <div class="widget flat">
            <div class="widget-header">
                <span id="productTabTitle" class="widget-caption">Product Management</span>
            </div>
            <div class="widget-body">
                <table id="productTable" class="table table-hover table-scrollable table-responsive">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Description</th>
                            <th>Additional Note</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <script language="javascript">ProductTableInit.Product();</script>
            </div>
        </div>
    </div>
</div>

<div id="modal-container" class="modal fade" tabindex="-1" role="dialog">
    <a href="#close" title="Close" class="modal-close-btn">X</a>
    <div class="modal-content" style="widows:90%">
        <div class="modal-body">

        </div>
    </div>
</div>