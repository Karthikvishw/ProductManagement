@model Repository.Models.ProductModel
<link href="~/css/productForm.styles.css" rel="stylesheet" />
<script src="~/js/ProductFormDashboard.js" asp-append-version="true"></script>

<div class="modal" role="dialog" style="display:block">
    <div class="modal-dialog modal-lg" role="document">

        <div class="modal-content">
            <div id="product-note-modal" class="parent-modal-anchor">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times-circle-o" aria-hidden="true"></i></button>
                    <h4 class="modal-title">
                        Product - @Model.Name
                    </h4>
                </div>
                <div id="div-edit-product-response" class="modal-body modal-body-product">
                    <div class="row">

                        <form class="form-horizontal bv-form" action="/Notes/productlogyNote/Save" id="editFormproduct" method="post" role="form" novalidate="novalidate">
                            <div class="col-xs-12">
                                <div class="col-xs-12 col-no-padding-left-right padding-bot-top-15">
                                    <div class="col-xs-3">
                                        <label class="control-label label-btm-padding label-regular">Name</label>
                                    </div>
                                    <div class="col-xs-9">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-no-padding-left-right padding-bot-top-15">
                                    <div class="col-xs-3">
                                        <label class="control-label label-btm-padding label-regular">Addition Note</label>
                                    </div>
                                    <div class="col-xs-9">
                                        @Html.TextBoxFor(model => model.AdditionalNote, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-no-padding-left-right padding-bot-top-15">
                                    <div class="col-xs-3">
                                        <label class="control-label label-btm-padding label-regular">Description</label>
                                    </div>
                                    <div class="col-xs-9">
                                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-no-padding-left-right padding-bot-top-15">
                                    <div class="col-xs-3">
                                        <label class="control-label label-btm-padding label-regular">Category</label>
                                    </div>
                                    <div class="control-group">
                                        @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.Categories, "Id", "Name"))
                                    </div>
                                </div>

                                <div class="col-xs-12 col-no-padding-left-right padding-bot-top-15">
                                    <div class="col-xs-3">
                                        <label class="control-label label-btm-padding label-regular">Status</label>
                                    </div>
                                    <div class="control-group">
                                        @Html.DropDownListFor(model => model.StatusId, new SelectList ( Model.ProductStatus, "Id", "Name"))
                                    </div>
                                </div>
                            </div>
                            <div class="hidFields">
                                @Html.HiddenFor(model => model.Id, new { id = "hidProductId" })
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-xs-12 text-align-center">
                        <button type="button" class="btn btn-md label-regular" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-md label-regular btnSubmitForm btn-save" id="saveProduct">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
